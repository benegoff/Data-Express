extends layout

block content

  form(id="registerForm", method="post", action="/register")
    label(for="username") Username:
    input(type="text" name="username" placeholder="Username")
    br
    label(for="password") Password:
    input(type="password" name = "password" placeholder="Password")
    br
    label(for="Q1") What do you like more?
    select(name = "Q1")
      option(value="Sushi") Sushi
      option(value="Pizza") Pizza
      option(value="World Domination") World Domination
      option(value="A Good Book") A Good Book
    br
    label(for="Q2") Who's the better cook?
    select(name = "Q2")
      option(value="Gordon Ramsay") Gordon Ramsay
      option(value="Julia Child") Julia Child
      option(value="Alton Brown") Alton Brown
      option(value="Bobby Flay") Bobby Flay
    br
    label(for="Q3") Where would you like to live?
    select(name = "Q3")
      option(value="The Bahamas") The Bahamas
      option(value="Iceland") Iceland
      option(value="The Land Down Undah") The Land Down Undah
      option(value="At The Bottom of a Well") At The Bottom of a Well
    br
    input(type='submit', value='Register')